<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ideasandinstars.trignometriccalculator.TrignometricCalc"
    android:visibility="visible"
    android:layout_centerHorizontal="true"
    style="@style/AppTheme"
    android:gravity="bottom|right|end"
    android:textAlignment="textEnd">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:inputType="number|numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/etInput"
            android:layout_gravity="center_horizontal|top" />

        <Button
            android:layout_width="100dp"
            android:layout_height="151dp"
            android:text="Sin"
            android:background="@android:color/transparent"
            android:id="@+id/sinButton"
            android:onClick="sineClicked"
            android:layout_gravity="left|bottom"
            android:textSize="30dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="152dp"
            android:text="Cos"
            android:id="@+id/cosButton"
            android:background="@android:color/transparent"
            android:onClick="cosClicked"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="30dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="152dp"
            android:text="Tan"
            android:id="@+id/tanButton"
            android:background="@android:color/transparent"
            android:onClick="tanClicked"
            android:layout_gravity="right|bottom"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Results"
            android:id="@+id/tvOutput"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:typeface="sans" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dabba Design by Kiran Prabhakar"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|bottom"
            android:inputType="none"
            android:textColor="#3852f7"
            android:textSize="14dp"
            android:textAlignment="center" />

    </FrameLayout>

</RelativeLayout>
