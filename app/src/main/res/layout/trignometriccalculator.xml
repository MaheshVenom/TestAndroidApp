<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:inputType="number|numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/etInput"
        android:layout_gravity="center_horizontal"
        android:textAlignment="textEnd"
        android:gravity="right|end"
        android:textSize="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Results"
        android:id="@+id/tvOutput"
        android:layout_below="@+id/etInput"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Sine"
        android:id="@+id/sinButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sineClicked"
        android:backgroundTint="#aabfe1" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Cosine"
        android:id="@+id/cosButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="cosClicked"
        android:backgroundTint="#aabfe1" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Tangent"
        android:id="@+id/tanButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="tanClicked"
        android:backgroundTint="#aabfe1" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="SEC"
        android:id="@+id/secButton"
        android:backgroundTint="#aabfe1"
        android:onClick="secClicked"
        android:layout_below="@+id/sinButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="CSEC"
        android:id="@+id/cosecButton"
        android:layout_alignTop="@+id/secButton"
        android:layout_alignRight="@+id/cosButton"
        android:layout_alignEnd="@+id/cosButton"
        android:backgroundTint="#aabfe1"
        android:onClick="csecClicked" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="COT"
        android:id="@+id/cotButton"
        android:layout_alignTop="@+id/cosecButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#aabfe1"
        android:onClick="cotClicked" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="LOG-B10"
        android:id="@+id/logButton"
        android:backgroundTint="#aabfe1"
        android:onClick="logClicked"
        android:layout_below="@+id/secButton"
        android:layout_alignRight="@+id/secButton"
        android:layout_alignEnd="@+id/secButton" />
</RelativeLayout>